<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/story_1_11_i"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="25"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />

        <!-- <ImageView -->
        <!-- android:id="@+id/rating" -->
        <!-- android:layout_height="match_parent" -->
        <!-- android:layout_weight="1" -->
        <!-- android:layout_width="0dp" -->
        <!-- android:clickable="@bool/abc_action_bar_embed_tabs" -->
        <!-- android:src="@drawable/menu_star" /> -->

        <ImageView
            android:id="@+id/cro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/srb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="75"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center"
            android:text="@string/menuChooseStory"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fffe9d" />

        <hr.startup.untoldstories_android.BounceScrollView
            android:id="@+id/bounceScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fadingEdgeLength="0dp"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/thumb1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/firstStory"
                        android:gravity="center"
                        android:textColor="#e4e2e2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/thumb2"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/secondStory"
                        android:gravity="center"
                        android:textColor="#e4e2e2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/thumb3"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/thirdStory"
                       android:gravity="center"
                        android:textColor="#e4e2e2" />
                </LinearLayout>
            </LinearLayout>
        </hr.startup.untoldstories_android.BounceScrollView>
    </LinearLayout>

</LinearLayout>
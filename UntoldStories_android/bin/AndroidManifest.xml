<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.startup.untoldstories_android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="12" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@drawable/icons_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".MenuActivity"
            android:configChanges="locale"
            android:label="@string/title_activity_menu"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".StoryActivity"
            android:configChanges="orientation|keyboardHidden|locale"
            android:label="@string/title_activity_story"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".AboutActivity"
            android:configChanges="locale"
            android:label="@string/title_activity_about"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".AudioRecorderActivity"
            android:configChanges="locale"
            android:label="@string/title_activity_menu"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".TmpAudioRecorderActivity"
            android:configChanges="locale"
            android:label="@string/title_activity_menu"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".OptionsActivity"
            android:configChanges="locale"
            android:label="@string/title_activity_options"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".SetLanguageActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RatingActivity"
            android:label="@string/title_activity_rating"
            android:screenOrientation="sensorLandscape" >
        </activity>
    </application>

</manifest>